# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OAuth Providers
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# Google Cloud Text-to-Speech (blog Listen feature). Enable at: https://console.cloud.google.com/apis/library/texttospeech.googleapis.com
GOOGLE_TTS_API_KEY=
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Omnivyra Integration
# Omnivyra tables live in the SAME Supabase as Drishiq (see database/omnivyra-schema.sql).
# Do not use a separate Supabase project for Omnivyra; use NEXT_PUBLIC_SUPABASE_* and SUPABASE_SERVICE_ROLE_KEY above.
OMNIVYRA_BASE_URL=https://api.omnivyra.com
OMNIVYRA_API_KEY=your_omnivyra_api_key
OMNIVYRA_TIMEOUT_MS=25000
OMNIVYRA_COMPANY_ID=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# JWT (for admin auth)
JWT_SECRET=your_jwt_secret

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Translation mode (super-admin): json = use locale JSON only; google = overlay with Google Translate API
# Client reads this via NEXT_PUBLIC_. Set in .env.local.
NEXT_PUBLIC_TRANSLATION_MODE=json
# Google Cloud Translation API key (server-side; used by /api/translate-google). Get key at: https://console.cloud.google.com/apis/library/translate.googleapis.com
GOOGLE_TRANSLATE_API_KEY=
